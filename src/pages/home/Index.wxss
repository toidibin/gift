.Home {
  text-align: left;
  font-size: 32px;
}
.Home .logo {
  height: 360px;
  overflow: hidden;
}
.Home .logo img {
  width: 100%;
}
.Home .wrap {
  padding: 16px;
  padding-bottom: 120px;
}
.Home .wrap h3 {
  font-size: 38px;
  margin: 0 0 20px 0;
}
.Home .wrap .item {
  display: flex;
  margin-bottom: 10px;
  font-size: 28px;
}
.Home .wrap .item span:first-child {
  width: 130px;
  text-align: right;
  margin-right: 30px;
}
.Home .wrap .item .colorTxt {
  color: #2dab9a;
}
.Home .wrap .item .text-dec {
  text-decoration: line-through;
}
.Home .wrap .rule h5 {
  font-size: 32px;
  margin: 40px 0 10px 0;
}
.Home .wrap .rule img {
  width: 100%;
}
.Home .wrap .myModal {
  width: 80%;
  font-size: 30px;
}
.Home .am-modal-title {
  font-size: 40px;
}
.Home .foot {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 110px;
  padding: 16px;
  text-align: center;
  box-sizing: border-box;
  background: white;
  line-height: 110px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.Home .foot .btn-group {
  display: flex;
}
.Home .foot .btn-group .btn {
  flex: 1;
}
.Home .foot .btn {
  height: 80px;
  line-height: 80px;
  font-size: 30px;
}
:global .wrapModal img {
  width: 100% !important;
  min-height: 300px;
  max-height: 720px;
  margin-bottom: 10px;
}
:global .wrapModal .modBtn {
  height: 80px;
  line-height: 80px;
  font-size: 30px;
}
